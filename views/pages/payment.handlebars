   <article>
    <main>
    <div class="container h-100" style="margin-top:3em">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-lg-12 col-xl-11">
            <div class="card text-black" style="border-radius: 25px;">
              <div class="card-body p-md-5">
                <div class="row justify-content-center">
                  <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
    
                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Payment Portal</p>
        <form action="/payment" method="POST" id="payment-form" class="user-payment">
            <label for="cnameInput">Name on Card</label>
             <input id = "cnameInput"  class="cardnumber_input" placeholder="Enter name on card" name="cnameInput" required minlength="2">
            <label for="cnumInput" id="cnumInput">Card Number</label>
             <input id = "cnumInput"  class="cardnumber_input" placeholder="Enter Card Number (must have at least 15 characters)" name="cnumInput" required maxlength="16">
            <br>
            <label for="cardnumberCVC">CVC</label>
             <input id = "cardnumberCVC" class="cardnumber_input" placeholder="Enter CVC" name="cardnumberCVC" required maxlength="3">
            <br>
            <label for="cardnumberExp">Exp. Date</label>
             <input id = "cardnumberExp"  class="cardnumber_input" placeholder="Enter Exp. Date" name="cardnumberExp" required maxlength="7"> 
            {{!-- </div> --}}
            {{#if err}}
                        <br>
                        <p class="err">{{message}}</p>
                        {{/if}}

            <button type="submit" class="paymentsubmission">Pay</button>
        </div>
        </form>
                  </div>
                  </div>
                  </div>
                  </div>
                  </div>
            </div>
        </div>
  

</main>
    </article>